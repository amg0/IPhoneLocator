<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <serviceStateTable>
        <stateVariable sendEvents="yes">
            <name>Present</name>
            <dataType>boolean</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>present</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>Muted</name>
            <dataType>boolean</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>muted</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>Location</name>
             <dataType>string</dataType>
             <defaultValue>Location</defaultValue>
             <shortCode>location</shortCode>
         </stateVariable>
        <stateVariable sendEvents="yes">
            <name>Distance</name>
            <dataType>float</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>distance</shortCode>
        </stateVariable>
		<stateVariable sendEvents="no">
			<name>CurLat</name>
			<dataType>float</dataType>
			<defaultValue>0</defaultValue>
			<shortCode>curlat</shortCode>
		</stateVariable>
		<stateVariable sendEvents="no">
			<name>CurLong</name>
			<dataType>float</dataType>
			<defaultValue>0</defaultValue>
			<shortCode>curlong</shortCode>
		</stateVariable>
    </serviceStateTable>
    <actionList>
		<action>
            <name>SetMute</name>
            <argumentList>
                <argument>
                    <name>newMuteStatus</name>
                    <direction>in</direction>
                    <relatedStateVariable>Muted</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetPresent</name>
            <argumentList>
                <argument>
                    <name>newPresentStatus</name>
                    <direction>in</direction>
                    <relatedStateVariable>Present</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>GetPresent</name>
            <argumentList>
                <argument>
                    <name>PresentStatus</name>
                    <direction>out</direction>
                    <relatedStateVariable>Present</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>GetLocation</name>
            <argumentList>
                <argument>
                    <name>CurrentLocation</name>
                    <direction>out</direction>
                    <relatedStateVariable>Location</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>GetDistance</name>
            <argumentList>
                <argument>
                    <name>CurrentDistance</name>
                    <direction>out</direction>
                    <relatedStateVariable>Distance</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>ForceRefresh</name>
        </action>
        <action>
            <name>GetMapUrl</name>
			<argumentList>
				<argument>
					<name>FullMapUrl</name>
					<direction>out</direction>
					<relatedStateVariable>MapUrl</relatedStateVariable>
				</argument>
			</argumentList>
        </action>
        <action>
            <name>SetDebug</name>
            <argumentList>
                <argument>
                    <name>newDebugMode</name>
                    <direction>in</direction>
                    <relatedStateVariable>Debug</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
	</actionList>
</scpd>
